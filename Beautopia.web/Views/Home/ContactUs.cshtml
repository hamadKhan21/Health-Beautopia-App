@model Beautopia.Model.Area.SiteInfo
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@using Beautopia.Services.IDataService
@using Beautopia.Services.DataAppService
@using Beautopia.Model.Area
@using Beautopia.web.Areas.Admin.Extensions;

@{
	var SessionLang = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<string>("Lang");


	//UsersAppService usersService = new UsersAppService();
	//IUsers _users;
	//_users = usersService;
	//SiteInfo siteInfo = _users.GetSiteInfo();




}

<!--section-->
<div class="section mt-0">
	<div class="contact-map">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3623.6520008942302!2d46.68930911500049!3d24.73882478411148!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2f03ec5a5c7df1%3A0xb79f935fa3caa1f3!2sFirst%20Specialist%20Medical%20Center!5e0!3m2!1sen!2ssa!4v1646404311161!5m2!1sen!2ssa"></iframe>
	</div>
</div>
