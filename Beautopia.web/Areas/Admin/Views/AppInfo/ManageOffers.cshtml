<div class="panel panel-primary">
	<div class="panel-heading">Manage Offers</div>


	<div id="tabs" style="margin-top: 10px;">


		<div class="container-fluid" id="IssueCard">


			<form id="manageoffer" method="post" novalidate>

				<div class="row row-xs-space mt-1">
					<div class="col-sm-3">
						<Label>
							Title En
						</Label>
						<input type="text" name="Title" id="Title" class="form-control inputClass" autocomplete="off" placeholder="Enter Title En" />
						<input type="hidden" name="ID" id="ID" value="0" />

					</div>
					<div class="col-sm-3">
						<Label>
							Title Ar
						</Label>
						<input type="text" name="TitleAr" id="TitleAr" class="form-control inputClass" autocomplete="off" placeholder="Enter Title Ar" />


					</div>

					<div class="col-sm-3 mt-1 mt-sm-0">

						<Label>
							Description En
						</Label>
						<textarea name="Description" id="Description" class="form-control inputClass" autocomplete="off" placeholder="Enter Description"></textarea>
					

					</div>

					<div class="col-sm-3 mt-1 mt-sm-0">

						<Label>
							Description Ar
						</Label>
						<textarea name="DescriptionAr" id="DescriptionAr" class="form-control inputClass" autocomplete="off" placeholder="Enter Description Ar"></textarea>
						


					</div>

				</div>

				<div class="row row-xs-space mt-1" style="margin-top:11px">

					<div class="col-sm-4 mt-1 mt-sm-0">
						<Label>
							Image
						</Label>

						<input type="file" name="OfferImageFile" id="OfferImageFile" class="form-control inputClass" />
						<input type="hidden" name="OfferImage" id="OfferImage" class="form-control inputClass" />

					</div>
					<div class="col-sm-2 mt-1 mt-sm-0">



						<img src="" id="subservice-img-tag" onerror='this.src = "../admin-custom/Images/no image.png"' style="width: 166px;" />

					</div>

					<div class="col-sm-2 mt-1 mt-sm-0" style="text-align:center">
						<Label>
							IsActive
						</Label>
						<input type="checkbox" name="IsActiveChecked" id="IsActiveChecked" class="form-control chkClass" />

					</div>
					<div class="text-right mt-2">
						<button type="submit" class="btn btn-success" style=" margin-right: 13px;">Save</button>
					</div>
				</div>


			</form>

		</div>


		<div id="CardHolderList">
			<div class="row">
				<div class="col-xs-18 col-md-12 offerGridDiv" style="margin-top: 22px;">
					<div id="offerGrid"></div>

				</div>
			</div>

		</div>

	</div>
</div>

@section scripts {
	<script src="~/admin-custom/js/manage-offer-controller.js"></script>
}
