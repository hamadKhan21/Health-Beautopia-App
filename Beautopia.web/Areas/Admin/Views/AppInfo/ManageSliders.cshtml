<div class="panel panel-primary">
	<div class="panel-heading">Service Category</div>


	<div id="tabs" style="margin-top: 10px;">


		<div class="container-fluid" id="IssueCard">


			<form id="manageslider" method="post" novalidate>

				<div class="row row-xs-space mt-1">
					<div class="col-sm-4">
						<Label>
							Title1 En
						</Label>
						<input type="text" name="title1" id="title1" class="form-control inputClass" autocomplete="off" placeholder="Enter title1 En" />


					</div>
					<div class="col-sm-4">
						<Label>
							Title1 Ar
						</Label>
						<input type="text" name="title1Ar" id="title1Ar" class="form-control inputClass" autocomplete="off" placeholder="Enter title1 Ar" />


					</div>
					<div class="col-sm-4 mt-1 mt-sm-0">
						<Label>
							Title2 En
						</Label>
						<input type="hidden" name="ID" id="ID" value="0" />
						<input type="text" name="title2" id="title2" class="form-control inputClass" autocomplete="off" placeholder="Enter Title2 En" />

					</div>
					<div class="col-sm-4 mt-1 mt-sm-0">
						<Label>
							Title2 Ar
						</Label>

						<input type="text" name="title2Ar" id="title2Ar" class="form-control inputClass" autocomplete="off" placeholder="Enter Title2 Ar" />

					</div>
					<div class="col-sm-4 mt-1 mt-sm-0">

						<Label>
							Title3 En
						</Label>
						<input type="text" name="title3" id="title3" class="form-control inputClass" autocomplete="off" placeholder="Enter Title3 En" />

					</div>
					<div class="col-sm-4 mt-1 mt-sm-0">

						<Label>
							Title3 Ar
						</Label>
						<input type="text" name="title3Ar" id="title3Ar" class="form-control inputClass" autocomplete="off" placeholder="Enter Title3 Ar" />

					</div>

				</div>

				<div class="row row-xs-space mt-1" style="margin-top:11px">

					<div class="col-sm-4 mt-1 mt-sm-0">
						<Label>
							Image
						</Label>

						<input type="file" name="SliderImageFile" id="SliderImageFile" class="form-control inputClass" />
						<input type="hidden" name="SliderImage" id="SliderImage" class="form-control inputClass" />

					</div>
					<div class="col-sm-2 mt-1 mt-sm-0">



						<img src="" id="subservice-img-tag" onerror='this.src = "../admin-custom/Images/no image.png"' style="width: 166px;" />

					</div>

					<div class="col-sm-2 mt-1 mt-sm-0" style="text-align:center">
						<Label>
							IsActive
						</Label>
						<input type="checkbox" name="IsActiveChecked" id="IsActiveChecked" class="form-control chkClass" />

					</div>
					<div class="text-right mt-2">
						<button type="submit" class="btn btn-success" style=" margin-right: 13px;">Save</button>
					</div>
				</div>


			</form>

		</div>


		<div id="CardHolderList">
			<div class="row">
				<div class="col-xs-18 col-md-12 sliderGridDiv" style="margin-top: 22px;">
					<div id="sliderGrid"></div>

				</div>
			</div>

		</div>

	</div>
</div>

@section scripts {
	<script src="~/admin-custom/js/manage-slider-controller.js"></script>
}
