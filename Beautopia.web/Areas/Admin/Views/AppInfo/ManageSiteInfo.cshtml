<div class="panel panel-primary">
	<div class="panel-heading">Manage Site Info</div>


	<div id="tabs" style="margin-top: 10px;">


		<div class="container-fluid" id="IssueCard">


			<form id="managesiteinfo" method="post" novalidate>

				<div class="row row-xs-space mt-1">
					<div class="col-sm-3">
						<Label>
							Address
						</Label>
						<input type="text" name="Address" id="Address" class="form-control inputClass" autocomplete="off" placeholder="Enter Address" />
						<input type="hidden" name="ID" id="ID" value="0" />

					</div>
					<div class="col-sm-3">
						<Label>
							Address Ar
						</Label>
						<input type="text" name="AddressAr" id="AddressAr" class="form-control inputClass" autocomplete="off" placeholder="Enter Address Ar" />
						<input type="hidden" name="ID" id="ID" value="0" />

					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">
						<Label>
							Contact
						</Label>

						<input type="text" name="Contact" id="Contact" class="form-control inputClass" autocomplete="off" placeholder="Enter Contact" />

					</div>

					<div class="col-sm-3 mt-1 mt-sm-0">
						<Label>
							Contact Ar
						</Label>

						<input type="text" name="ContactAr" id="ContactAr" class="form-control inputClass" autocomplete="off" placeholder="Enter Contact Ar" />

					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">


						<Label>
							Email
						</Label>

						<input type="text" name="Email" id="Email" class="form-control inputClass" autocomplete="off" placeholder="Enter Email" />


					</div>

					<div class="col-sm-3 mt-1 mt-sm-0">


						<Label>
							Facebook
						</Label>

						<input type="text" name="Facebook" id="Facebook" class="form-control inputClass" autocomplete="off" placeholder="Enter Facebook" />


					</div>

				</div>

				<div class="row row-xs-space mt-1">
					<div class="col-sm-3">
						<Label>
							Twitter
						</Label>
						<input type="text" name="Twitter" id="Twitter" class="form-control inputClass" autocomplete="off" placeholder="Enter Twitter" />
						<input type="hidden" name="ID" id="ID" value="0" />

					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">
						<Label>
							Instagram
						</Label>

						<input type="text" name="Instagram" id="Instagram" class="form-control inputClass" autocomplete="off" placeholder="Enter Instagram" />

					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">


						<Label>
							GooglePlus
						</Label>

						<input type="text" name="GooglePlus" id="GooglePlus" class="form-control inputClass" autocomplete="off" placeholder="Enter GooglePlus" />


					</div>

					<div class="col-sm-3 mt-1 mt-sm-0">


						<Label>
							SnapChat
						</Label>

						<input type="text" name="SnapChat" id="SnapChat" class="form-control inputClass" autocomplete="off" placeholder="Enter SnapChat" />


					</div>

				</div>

				<div class="row row-xs-space mt-1" style="margin-top:11px">


					<div class="col-sm-3 mt-1 mt-sm-0">


						<Label>
							TikTok
						</Label>

						<input type="text" name="TikTok" id="TikTok" class="form-control inputClass" autocomplete="off" placeholder="Enter TikTok" style="margin-bottom: 5px;" />


					</div>

					<div class="col-sm-4 mt-1 mt-sm-0">
						<Label>
							Image
						</Label>

						<input type="file" name="LogoImageFile" id="LogoImageFile" class="form-control inputClass" />
						<input type="hidden" name="LogoImage" id="LogoImage" class="form-control inputClass" />

					</div>
					<div class="col-sm-2 mt-1 mt-sm-0">



						<img src="" id="subservice-img-tag" onerror='this.src = "../admin-custom/Images/no image.png"' style="width: 166px;" />

					</div>
					<div class="col-sm-2 mt-1 mt-sm-0" style="text-align:center">
						<Label>
							Is Arabic By Default
						</Label>
						<input type="checkbox" name="IsArabicByDefaultChecked" id="IsArabicByDefaultChecked" class="form-control chkClass" />

					</div>
					<div class="text-right mt-2">
						<button type="submit" class="btn btn-success" style=" margin-right: 13px;">Save</button>
					</div>
				</div>


			</form>

		</div>


		

	</div>
</div>

@section scripts {
	<script src="~/admin-custom/js/manage-siteinfo-controller.js"></script>
}
