<div class="panel panel-primary">
	<div class="panel-heading">Manage Doctors</div>


	<div id="tabs" style="margin-top: 10px;">


		<div class="container-fluid" id="IssueCard">


			<form id="managedoctor" method="post" novalidate>

				<div class="row row-xs-space mt-1">
					<div class="col-sm-3">
						<Label>
							Doctors Category
						</Label>

						<select name="DoctorsCategoryID" class="form-control selectClass" id="DoctorsCategoryID" style="font-weight:bold">
							<option selected="selected" value="" disabled="disabled">Select Doctors Category</option>

						</select>


					</div>
					<div class="col-sm-3">
						<Label>
							Doctor Name
						</Label>
						<input type="text" name="DoctorName" id="DoctorName" class="form-control inputClass" autocomplete="off" placeholder="Enter Doctor Name" />


					</div>
					<div class="col-sm-3">
						<Label>
							Doctor Name Ar
						</Label>
						<input type="text" name="DoctorNameAr" id="DoctorNameAr" class="form-control inputClass" autocomplete="off" placeholder="Enter Doctor Name Ar" />


					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">
						<Label>
							Designation
						</Label>
						<input type="hidden" name="ID" id="ID" value="0" />
						<input type="text" name="Designation" id="Designation" class="form-control inputClass" autocomplete="off" placeholder="Enter Designation" />

					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">
						<Label>
							Designation Ar
						</Label>
						<input type="hidden" name="ID" id="ID" value="0" />
						<input type="text" name="DesignationAr" id="DesignationAr" class="form-control inputClass" autocomplete="off" placeholder="Enter Designation Ar" />

					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">

						<Label>
							Description
						</Label>
						<textarea name="Description" id="Description" class="form-control inputClass" autocomplete="off" placeholder="Enter Description"></textarea>
						@*<input type="text" name="Description" id="Description" class="form-control inputClass" autocomplete="off" placeholder="Enter Title3" />*@

					</div>

					<div class="col-sm-3 mt-1 mt-sm-0">

						<Label>
							Description Ar
						</Label>
						<textarea name="DescriptionAr" id="DescriptionAr" class="form-control inputClass" autocomplete="off" placeholder="Enter Description Ar"></textarea>
						@*<input type="text" name="Description" id="Description" class="form-control inputClass" autocomplete="off" placeholder="Enter Title3" />*@

					</div>
					<div class="col-sm-3 mt-1 mt-sm-0">
						<Label>
							Instagram Link
						</Label>
						<input type="hidden" name="ID" id="ID" value="0" />
						<input type="text" name="InstagramLink" id="InstagramLink" class="form-control inputClass" autocomplete="off" placeholder="Enter Instagram Link" />

					</div>
				</div>

				<div class="row row-xs-space mt-1" style="margin-top:11px">
				
					<div class="col-sm-2 mt-1 mt-sm-0">
						<Label>
							Image En
						</Label>

						<input type="file" name="DoctorImageFile" id="DoctorImageFile" class="form-control inputClass" />
						<input type="hidden" name="DoctorImage" id="DoctorImage" class="form-control inputClass" />

					</div>
					<div class="col-sm-2 mt-1 mt-sm-0">



						<img src="" id="subservice-img-tag" onerror='this.src = "../admin-custom/Images/no image.png"' style="width: 166px;" />


					</div>

					<div class="col-sm-2 mt-1 mt-sm-0">
						<Label>
							Image Ar
						</Label>

						<input type="file" name="DoctorImageFileAr" id="DoctorImageFileAr" class="form-control inputClass" />
						<input type="hidden" name="DoctorImageAr" id="DoctorImageAr" class="form-control inputClass" />

					</div>
					<div class="col-sm-2 mt-1 mt-sm-0">



						<img src="" id="subservice-img-tagAr" onerror='this.src = "../admin-custom/Images/no image.png"' style="width: 166px;" />

					</div>

					<div class="col-sm-2 mt-1 mt-sm-0" style="text-align:center">
						<Label>
							IsActive
						</Label>
						<input type="checkbox" name="IsActiveChecked" id="IsActiveChecked" class="form-control chkClass" />

					</div>
					<div class="text-right mt-2">
						<button type="submit" class="btn btn-success" style=" margin-right: 13px;">Save</button>
					</div>
				</div>


			</form>

		</div>


		<div id="CardHolderList">
			<div class="row">
				<div class="col-xs-18 col-md-12 doctorGridDiv" style="margin-top: 22px;">
					<div id="doctorGrid"></div>

				</div>
			</div>

		</div>

	</div>
</div>

@section scripts {
	<script src="~/admin-custom/js/manage-doctor-controller.js"></script>
}
